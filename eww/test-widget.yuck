(defwidget test-widget [text]
  (box
    :container "class"
    text
    (children)
  )
)

(defwindow test-window
  :monitor 0
  :geometry (geometry
    :x "0px"
    :y "0px"
    :width "90%"
    :height "50px"
    :anchor "center center"
  )
  :stacking "fg"
  :exclusive false
  :focusable "none"
  :namespace "Test Widget"
  (test-widget
    "Hello, world!"
  )
)
